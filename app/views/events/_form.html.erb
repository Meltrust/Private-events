  <%= f.date_field :date, placeholder: "Date" %>
  <br>
  <%= f.label :location %>
  <%= f.text_field :location, placeholder: "Location" %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description, placeholder: "Description" %>
  <br>
  <hr>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
